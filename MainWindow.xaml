<Window x:Class="RngHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RngHelper"
        mc:Ignorable="d"        
    Title="RngHelper" Height="150" Width="200" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox x:Name="txtBox" Grid.Row="0" TextAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Text="{Binding Random}" Background="{Binding BackgroundColor}"></TextBox>
        <Button x:Name="randomButton" Click="randomButton_Click" Grid.Row="1" Margin="5,5,5,5">Random!</Button>
        <CheckBox Content="Auto update" Grid.Row="3" Margin="5,5,5,5" IsChecked="{Binding AutoUpdate, Mode=TwoWay}" />
    </Grid>
</Window>
